<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:layoutDirection="ltr"
    tools:context=".login">

    <Button
        android:id="@+id/login_btn"
        android:layout_width="208dp"
        android:layout_height="201dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/tributton"
        android:text="LOGIN"
        android:textColor="@color/bigbtntxtcolor"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="345dp"
        android:layout_height="92dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-black"
        android:paddingStart="45dp"
        android:paddingTop="26dp"
        android:paddingRight="95dp"
        android:text="@string/login"
        android:textAlignment="center"
        android:textColor="@color/hardtext"
        android:textSize="34sp"
        app:drawableStartCompat="@drawable/logologin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="259dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.51">

        <EditText
            android:id="@+id/usernamelogin"
            style="@android:style/Widget.Holo.Light.EditText"
            android:layout_width="315dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/feildbackground"
            android:bufferType="editable"
            android:drawableEnd="@drawable/user1"
            android:drawablePadding="30dp"
            android:drawableTint="@color/white"
            android:ellipsize="start"
            android:foregroundTint="@color/white"
            android:freezesText="false"
            android:hint="EMAIL"
            android:inputType="textWebEmailAddress"
            android:padding="20dp"
            android:textAlignment="viewStart"
            android:textColor="@color/feildtextcolor"
            android:textColorHint="@color/feildhint"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/password"
            android:layout_width="315dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/feildbackground"
            android:drawableRight="@drawable/password"
            android:ems="10"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:padding="20dp"
            android:paddingRight="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/feildhint"
            android:textColorHint="@color/feildhint"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Didn't Register "
                android:textColor="@color/lighttext2"
                android:textSize="16sp" />

            <Button
                android:id="@+id/rtrnbacktomain2"
                android:layout_width="125dp"
                android:layout_height="27dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/bcktofirstbtn"
                android:text="REGISTER HERE"
                android:textColor="@color/smallbtntextcolor" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>