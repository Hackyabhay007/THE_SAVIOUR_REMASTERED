<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout11"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bigbtnborder"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Add Guardian"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/BodyGuardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Guardian Name"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/lighttext"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/BodyGuardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:focusable="false"
                android:hint="Guardian Number"
                android:inputType="textPersonName"
                android:maxLength="13"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColor="@color/lighttext"
                android:textColorHint="@color/lighttext"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/selectFromContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/bigbtnbgcolor"
                android:text="Choose Contact"
                android:textColor="@color/feildbackground"
                android:textSize="@dimen/_10sdp" />

            <Button
                android:id="@+id/BoduGuardSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bigbtnbgcolor"
                android:text="SUBMIT"
                android:textColor="@color/feildbackground"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/lighttext"
                android:padding="@dimen/_6sdp"
                android:text="The Number You Select Should Be Of The Same Device in which Guardian Is login"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>