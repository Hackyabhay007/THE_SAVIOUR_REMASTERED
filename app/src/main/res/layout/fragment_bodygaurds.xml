<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setprimaryforb3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:backgroundTint="@color/backgroundcolor"
    tools:context="com.hackydesk.thesaviour.bodyguards">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bigbtnborder"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/scrollView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/AWAREMODE"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="20dp"
            android:background="@drawable/bcktofirstbtn"
            android:backgroundTint="@color/feildbackground"
            android:drawableLeft="@drawable/icons8_guardian_64"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="fill_vertical"
            android:text="MY GUARDIANS"
            android:textAlignment="center"
            android:textColor="@color/lighttext"
            android:textSize="@dimen/_20sdp"
            app:drawableTint="@color/bigbtnbgcolor" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/b1card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hapticFeedbackEnabled="true"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="159dp"
                        android:layout_height="86dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bname1"
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:fontFamily="sans-serif-black"
                            android:text="GUARDIAN  1"
                            android:textColor="@color/lighttext2"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="139dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/bnum1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="NOT EXIST"
                                android:textColor="#FF0101" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <Switch
                            android:id="@+id/primaryb1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            android:backgroundTint="@color/bigbtnborder"
                            android:button="@drawable/bcktofirstbtn"
                            android:buttonTintMode="src_over"
                            android:checked="false"
                            android:padding="10dp"
                            android:splitTrack="false"
                            android:switchTextAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textColorHint="#FF0303"
                            android:textOff="SECONDARY"
                            android:textOn="PRIMARY"
                            android:thumbTint="@color/bigbtnborder"
                            android:track="@drawable/trackswitch"
                            android:visibility="gone"
                            tools:checked="false"
                            tools:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/b2card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hapticFeedbackEnabled="true"
                app:cardBackgroundColor="@color/bigbtnbgcolor"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="159dp"
                        android:layout_height="86dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bname2"
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:fontFamily="sans-serif-black"
                            android:text="GUARDIAN 2"
                            android:textColor="@color/lighttext2"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="139dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/bnum2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="NOT EXIST"
                                android:textColor="#FF0101" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <Switch
                            android:id="@+id/primaryb2"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            android:backgroundTint="@color/bigbtnborder"
                            android:button="@drawable/bcktofirstbtn"
                            android:buttonTintMode="src_over"
                            android:checked="false"
                            android:padding="10dp"
                            android:splitTrack="false"
                            android:switchPadding="@dimen/_20sdp"
                            android:switchTextAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textOff="SECONDARY"
                            android:textOn="PRIMARY"
                            android:thumbTint="@color/bigbtnborder"
                            android:track="@drawable/trackswitch"
                            android:visibility="gone"
                            tools:checked="false"
                            tools:visibility="gone" />

                        <Button
                            android:id="@+id/addguardian2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:background="@color/bigbtnborder"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="+"
                            android:textColor="@color/bigbtnbgcolor"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="gone"
                            tools:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/b3card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hapticFeedbackEnabled="true"
                app:cardBackgroundColor="@color/bigbtnbgcolor"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="159dp"
                        android:layout_height="86dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bname3"
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:fontFamily="sans-serif-black"
                            android:text="GUARDIAN 3"
                            android:textColor="@color/lighttext2"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="139dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/bnum3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="NOT EXIST"
                                android:textColor="#FF0101" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <Switch
                            android:id="@+id/primaryb3"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            android:backgroundTint="@color/bigbtnborder"
                            android:button="@drawable/bcktofirstbtn"
                            android:buttonTintMode="src_over"
                            android:checked="false"
                            android:padding="10dp"
                            android:splitTrack="false"
                            android:switchTextAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textOff="SECONDARY"
                            android:textOn="PRIMARY"
                            android:thumbTint="@color/bigbtnborder"
                            android:track="@drawable/trackswitch"
                            tools:checked="false"
                            tools:visibility="gone"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/addguardian3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@color/bigbtnborder"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="+"
                            android:textColor="@color/bigbtnbgcolor"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="gone"
                            tools:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/bigbtnborder"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="30dp">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PRIMARY : "
                            android:textColor="@color/red"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/primarystatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NOT FOUND"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="10dp"
                        android:text="It  Rings The  Guardian Phone Louder When you Activate SOS mode either By Rapid Mode Or by Main Sos button. it Works Even If phone is not connected to internet , Uses Sms ."
                        android:textAlignment="inherit"
                        android:textColor="@color/lighttext2" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>