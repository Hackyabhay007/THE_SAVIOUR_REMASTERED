<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave_haikei__1_"
    tools:context="com.hackydesk.thesaviour.settings"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AWAREMODE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/bcktofirstbtn"
                android:backgroundTint="@color/feildbackground"
                android:drawableLeft="@drawable/ic_baseline_settings_24"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:padding="@dimen/_14sdp"
                android:text="SETTINGS"
                android:textAlignment="center"
                android:textColor="@color/lighttext"
                android:textSize="@dimen/_23ssp"
                app:drawableTint="@color/black" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.44">

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/profile_user"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_63sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:background="@drawable/rippleeffect"
                            android:backgroundTint="@color/black"
                            android:drawableLeft="@drawable/profile_settings"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="10dp"
                            android:text="Profiile"
                            android:textColor="@color/hardtext2"
                            android:textSize="@dimen/_13ssp" />

                        <Button
                            android:id="@+id/parent_mode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_63sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/rippleeffect"
                            android:backgroundTint="@color/black"
                            android:backgroundTintMode="src_in"
                            android:drawableLeft="@drawable/icons8_menu_24___"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="@dimen/_15sdp"
                            android:text="GUIDE TO USE"
                            android:textColor="@color/hardtext2"
                            android:textSize="@dimen/_13ssp"
                            android:visibility="visible"
                            tools:visibility="visible" />

                        <Button
                            android:id="@+id/addbodygaurd"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/rippleeffect"
                            android:backgroundTint="@color/btnbackgrouncolor"
                            android:drawableLeft="@drawable/icons8_add_user_male_50"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="10dp"
                            android:shadowColor="#EC0000"
                            android:text="ADD  GUARDIAN"
                            android:textColor="@color/lighttext"
                            android:textSize="20sp"
                            android:visibility="gone"
                            tools:visibility="gone" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView21"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/bigbtnborder"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Other Features" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:padding="10dp">

                                        <TextView
                                            android:id="@+id/textView20"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:padding="5dp"
                                            android:text="RAPID SOS"
                                            android:textSize="@dimen/_13sdp" />

                                        <Switch
                                            android:id="@+id/RapidSos"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:padding="5dp"
                                            tools:ignore="TouchTargetSizeCheck" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/textView27"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:text="it provides functionality to use SOS mode Without Opening App , By Pressing Volume Up 7 times within 4 seconds"
                                        android:textSize="@dimen/_11sdp" />

                                    <View
                                        android:id="@+id/divider15"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="?android:attr/listDivider" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/textView201"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:text="SKIP SPLASH SCREEN"
                                        android:textSize="@dimen/_13sdp" />

                                    <Switch
                                        android:id="@+id/SkipSplash"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        tools:ignore="TouchTargetSizeCheck" />
                                </LinearLayout>

                                <View
                                    android:id="@+id/divider11"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="?android:attr/listDivider" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="right"
                                        android:orientation="horizontal"
                                        android:padding="10dp">

                                        <TextView
                                            android:id="@+id/textView2054564"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:padding="5dp"
                                            android:text="Repair"
                                            android:textSize="@dimen/_13sdp" />

                                        <Button
                                            android:id="@+id/repiarBtn"
                                            style="@style/Widget.AppCompat.Button.Borderless"
                                            android:layout_width="wrap_content"
                                            android:layout_height="38dp"
                                            android:layout_weight="1"
                                            android:gravity="right|center_horizontal"
                                            android:text="Repair" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/textViewwefsdqw27"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:text="If Not Receiving Notifications Enable Autostart"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/logout_btn"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_margin="@dimen/_20sdp"
                                android:background="@drawable/feildbackground"
                                android:backgroundTint="@color/red"
                                android:drawableLeft="@drawable/icons8_logout_48"
                                android:fontFamily="sans-serif-black"
                                android:paddingLeft="25dp"
                                android:paddingRight="59dp"
                                android:text="LOGOUT"
                                android:textAlignment="center"
                                android:textColor="@color/bigbtntxtcolor"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>